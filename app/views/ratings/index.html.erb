<h1><%= t :commented_ratings %></h1>


<ul class="list-group">
  <% @commented.each do |rating| %>
      <li class="list-group-item">
        <h4 class="list-group-item-heading">
        by: <%= link_to rating.user.username, user_path(rating.user) %> |
        for: <%= link_to rating.place.name, place_path(rating.place) %> |
        points: <%= rating.points %>
          </h4>
        <blockquote>
          <%= rating.comment %>
        </blockquote>
      </li>
  <% end %>
</ul>

<%= link_to 'New Rating', new_rating_path, class:"btn btn-default" %>
