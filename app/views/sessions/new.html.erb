<h1><%= t :Sign_in %></h1>

<p id="notice"><%= notice %></p>

<%= form_tag session_path do %>
    <div class="field">
      <%= label_tag (t :username) %></br>
      <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
      <%= label_tag (t :password) %></br>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="actions">
      <%= submit_tag (t :log_in) %>
    </div>
<% end %>