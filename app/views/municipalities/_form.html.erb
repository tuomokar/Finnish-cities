<%= form_for(@municipality) do |f| %>

  <div class="field">
    <%= f.label (t :Name) %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label (t :Year) %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label (t :Description) %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label (t :Population) %><br>
    <%= f.number_field :population %>
  </div>
  <div class="field">
    <%= f.label (t :Link) %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label (t :Region) %><br>
    <%= f.select :region_id, options_from_collection_for_select(@regions, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


