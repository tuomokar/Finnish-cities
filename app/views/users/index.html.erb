<p id="notice"><%= notice %></p>

<h1><%= t :Users %></h1>

<table>
  <thead>
  <tr>
    <th><%= t :username %></th>
    <th>admin</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.admin %></td>
        <% if can? :edit, @user %>
            <td><%= link_to (t :Show), user %></td>
            <td><%= link_to (t :Edit), edit_user_path(user) %></td>

            <td><%= link_to (t :Destroy), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

